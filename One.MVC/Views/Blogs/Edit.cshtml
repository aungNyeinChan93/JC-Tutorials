@{
    ViewData["title"] = "Edit Page";
    TblBlog oldBlog = ViewBag.oldBlog;
}

<section>

    <div class="container-sm mx-auto p-4 my-5">
        <form action="/blogs/update" method="post">
            <input type="hidden"  name="@oldBlog.BlogId" />
            <p>@oldBlog.BlogId</p>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="Title" placeholder="Title" value="@oldBlog.Title">
            </div>
            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" name="AuthorName" value="@oldBlog.AuthorName" placeholder="Author">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" name="Description" value="@oldBlog.Description" placeholder="Description">
            </div>
            <div class="mb-3">
                <input type="submit" value="Update" class="btn btn-info">
            </div>
        </form>
    </div>

</section>